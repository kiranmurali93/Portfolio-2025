---
import { getEntry } from 'astro:content';

const profile = await getEntry('profile', 'info');
const { data } = profile;
---

<section class="py-16 max-w-4xl mx-auto px-4 sm:px-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
    <div class="order-2 md:order-1 text-left">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Hey, I am {data.name}
      </h1>
      <p class="text-xl text-accent-600 italic mb-6">{data.tagline}</p>
      
      <div class="prose prose-lg max-w-none mb-8">
        <p class="text-gray-600">{data.aboutBrief}</p>
      </div>
    </div>
    
    <div class="order-1 md:order-2">
      <div class="relative">
        <div class="aspect-square overflow-hidden rounded-2xl shadow-xl transform hover:scale-105 transition-transform duration-300">
          <img 
            src={data.profileImage} 
            alt={`Photo of ${data.name}`} 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
      </div>
    </div>
  </div>
</section>